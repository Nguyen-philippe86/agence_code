{% extends 'base.html.twig' %}

{% block title %}Tous les biens{% endblock %}

{% block body %}

    <p class="titre">{% block titre %}Modification du profil de {{app.user.firstname}}{% endblock %}</p>

    <div class="containerCreate">
        {{ form_start(form) }}

                <div class="formCreate">

                    <div class="formTitle">
                        {{form_label(form.firstname, 'Prénom')}}
                    </div>
                    <div class="formWidget">
                        {{form_widget(form.firstname, {'attr':{'placeholder': "Prénom"}})}}
                        <div class="formErrors">
                            {{form_errors(form.firstname)}}
                        </div>
                    </div>

                    <div class="formTitle">
                        {{form_label(form.lastname, 'Nom de famille')}}
                    </div>
                    <div class="formWidget">
                        {{form_widget(form.lastname, {'attr':{'placeholder': "Nom de famille"}})}}
                        <div class="formErrors">
                            {{form_errors(form.lastname)}}
                        </div>
                    </div>

                    <div class="formTitle">
                        {{form_label(form.country, 'Pays')}}
                    </div>
                    <div class="formWidget">
                        {{form_widget(form.country, {'attr':{'placeholder': "Pays"}})}}
                        <div class="formErrors">
                            {{form_errors(form.country)}}
                        </div>
                    </div>

                    <div class="formTitle">
                        {{form_label(form.address, 'Adresse')}}
                    </div>
                    <div class="formWidget">
                        {{form_widget(form.address, {'attr':{'placeholder': "Adresse"}})}}
                        <div class="formErrors">
                            {{form_errors(form.address)}}
                        </div>
                    </div>

                    <div class="formTitle">
                        {{form_label(form.username, 'Nom d\'utilisateur')}}
                    </div>
                    <div class="formWidget">
                        {{form_widget(form.username, {'attr':{'placeholder': "Nom d\'utilisateur"}})}}
                        <div class="formErrors">
                            {{form_errors(form.username)}}
                        </div>
                    </div>

                    <div class="formTitle">
                        {{form_label(form.phone, 'Numéros de téléphone')}}
                    </div>
                    <div class="formWidget">
                        {{form_widget(form.phone, {'attr':{'placeholder': "Numéros de téléphone"}})}}
                        <div class="formErrors">
                            {{form_errors(form.phone)}}
                        </div>
                    </div>

                    <div class="containerRegistration">
                        <input type="submit" class="btn-create" value="Enregistrer"/>
                    </div>
        {{ form_end(form) }}
    </div>

{% endblock %}

